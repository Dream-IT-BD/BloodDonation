<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/popup_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="60dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.777">

        <TextView
            android:id="@+id/tvBloodNeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="wrap_content "
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tvBloodManaged"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="wrap_content "
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tvWarningText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="wrap_content "
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24sp"/>

        <com.ebanx.swipebtn.SwipeButton
            android:id="@+id/swipe_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:button_bottom_padding="20dp"
            app:button_left_padding="20dp"
            app:button_right_padding="20dp"
            app:button_top_padding="20dp"
            app:button_image_disabled="@drawable/arrow_right"
            app:button_image_enabled="@drawable/waterplus"
            app:inner_text="Blood Managed"
            app:button_background="@drawable/shape_button"
            app:inner_text_background="@drawable/shape_background"
            app:inner_text_bottom_padding="16dp"
            app:inner_text_color="#000000"
            app:inner_text_size="18sp"
            app:inner_text_top_padding="16dp" />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>